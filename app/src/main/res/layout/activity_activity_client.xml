<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.quent.camping.ActivityClient">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nomClient"
        android:hint="@string/nomClient"
        android:layout_marginTop="47dp"
        android:layout_below="@+id/titreClient"
        android:layout_alignStart="@+id/prenomClient" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/prenomClient"
        android:layout_below="@+id/nomClient"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:hint="@string/prenomClient" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/titreClient"
        android:id="@+id/titreClient"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/dateNaissClient"
        android:layout_marginTop="48dp"
        android:layout_below="@+id/prenomClient"
        android:layout_alignStart="@+id/prenomClient"
        android:hint="@string/dateNaissClient" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/numPortableClient"
        android:layout_below="@+id/dateNaissClient"
        android:layout_alignStart="@+id/dateNaissClient"
        android:layout_marginTop="40dp"
        android:hint="@string/numPortableClient" />

</RelativeLayout>
